<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="BackgroundDimEnabled" parent="BaseDialog">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="BackgroundDimDisabled" parent="BaseDialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MyTopInDialogAnim" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/in_from_top</item>
        <item name="android:windowExitAnimation">@anim/out_to_top</item>
    </style>

    <style name="MyBottomInDialogAnim" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_to_bottom</item>
    </style>

    <style name="MyLeftInDialogAnim" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/in_from_left</item>
        <item name="android:windowExitAnimation">@anim/out_to_left</item>
    </style>

    <style name="MyRightInDialogAnim" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/in_from_right</item>
        <item name="android:windowExitAnimation">@anim/out_to_right</item>
    </style>

    <style name="MyAlphaInDialogAnim" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/in_from_alpha</item>
        <item name="android:windowExitAnimation">@anim/out_to_alpha</item>
    </style>

    <style name="MyScaleTopInDialogAnim" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/scale_top_in</item>
        <item name="android:windowExitAnimation">@anim/scale_top_out</item>
    </style>

    <style name="MyScaleLeftInDialogAnim" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/scale_left_in</item>
        <item name="android:windowExitAnimation">@anim/scale_left_out</item>
    </style>

    <style name="MyScaleRightInDialogAnim" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/scale_right_in</item>
        <item name="android:windowExitAnimation">@anim/scale_right_out</item>
    </style>

    <style name="MyScaleBottomInDialogAnim" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/scale_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/scale_bottom_out</item>
    </style>

    <style name="MyScaleLeftTopInDialogAnim" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/scale_left_top_in</item>
        <item name="android:windowExitAnimation">@anim/scale_left_top_out</item>
    </style>

    <style name="MyScaleRightTopInDialogAnim" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/scale_right_top_in</item>
        <item name="android:windowExitAnimation">@anim/scale_right_top_out</item>
    </style>

    <style name="MyScaleLeftBottomInDialogAnim" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/scale_left_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/scale_left_bottom_out</item>
    </style>

    <style name="MyScaleRightBottomInDialogAnim" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/scale_right_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/scale_right_bottom_out</item>
    </style>

    <style name="MyScaleInDialogAnim" parent="BaseDialog">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>


</resources>